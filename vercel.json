{
    "functions": {
      "api/**/*.php": {
        "runtime": "vercel-php@0.6.0"
      }
    },
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" }, // Für PHP-Dateien
      { "src": "/(.*\\.(js|css|html|jpg|png|gif|ico))$", "dest": "/$1" }, // Für statische Dateien
      { "src": "/(.*)", "dest": "/index.html" } // Für alle anderen Anfragen (z.B. die Startseite)
    ]
  }